{% extends 'base.html.twig' %}

{% block title %}Prendre RDV - {{ doctor.user.fullName }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5>Prendre RDV avec Dr. {{ doctor.user.fullName }}</h5>
                    <p class="text-muted">Spécialité : {{ doctor.specialty }}</p>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" name="date" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Heure</label>
                            <input type="time" name="time" class="form-control" required>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary">Confirmer le créneau</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
